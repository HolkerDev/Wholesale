<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout_card"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <!--Background image-->
    <ImageView
        android:id="@+id/card_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/b_factory_1" />

    <!--Check button-->
    <Button
        android:id="@+id/btn_card_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn_rounded"
        android:fontFamily="@font/buttons"
        android:text="Check"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <!--black gradient on the bot-->
    <ImageView
        android:id="@+id/iv_gradient"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/black_gradient"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <!--Profile image-->
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:src="@drawable/unknown"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/btn_card_follow"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        app:civ_border_color="#000000"
        app:civ_border_width="3dp" />

    <!--Profile name-->
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:fontFamily="@font/text"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_card_follow"
        android:layout_alignParentStart="true"
        android:layout_marginStart="119dp"
        android:text="Name Surname"
        android:textColor="#fff"
        android:textStyle="bold" />

    <!--Can be rating-->
    <TextView
        android:id="@+id/profile_followers"
        android:layout_width="wrap_content"
        android:fontFamily="@font/text"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profile_name"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="rating"
        android:textColor="#fff"
        android:textStyle="bold" />

</RelativeLayout>