<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.Offer">
    <!--Logo-->
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_logo" />

    <!--Name of the app-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/beautiful"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/offer_price"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:ems="10"
        android:gravity="center"
        android:background="@drawable/gaps"
        android:hint="Price"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/offer_comment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gaps"
        android:layout_margin="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Comment"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/offer_add_location"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/btn_rounded"
        android:fontFamily="@font/trueno_lt"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:text="Add location" />

    <Button
        android:id="@+id/offer_submit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/btn_rounded"
        android:fontFamily="@font/trueno_lt"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:text="Submit order" />
</LinearLayout>