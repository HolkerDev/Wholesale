<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_log"
    android:orientation="vertical"
    tools:context=".activities.SignupDescription">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/unknown"
                app:civ_border_color="#000000"
                app:civ_border_width="3dp" />

            <EditText
                android:id="@+id/et_signup_descr_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="20dp"
                android:background="@drawable/gaps"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/h_company_name"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_attach"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_rounded"
                android:fontFamily="@font/ubuntu_light"
                android:text="@string/btn_add_profile_photo"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/layout_stroke"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_add_inter"
                    android:layout_width="300dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/btn_rounded"
                    android:fontFamily="@font/ubuntu_light"
                    android:gravity="center"
                    android:text="@string/btn_add"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp" />

                <ListView
                    android:id="@+id/lv_interests"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_margin="20dp" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_signup_descr_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select background"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/btn_signup_descr_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter location"
                android:textAllCaps="false" />

            <EditText
                android:id="@+id/et_sign_up_descr_descr"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/description_gap"
                android:ems="10"
                android:gravity="center"
                android:hint="Write short description"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn_rounded"
                android:fontFamily="@font/ubuntu_light"
                android:text="@string/btn_sign_up"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="25sp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>