<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#2c3345"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SignUp"
        android:orientation="vertical">

    <ImageView android:layout_width="match_parent"
               android:layout_height="50dp"
               app:srcCompat="@drawable/ic_logo"/>

    <TextView
            android:text="@string/app_name"
            android:gravity="center"
            android:textSize="35sp"
            android:fontFamily="@font/q"
            android:textColor="#969bd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:layout_margin="20dp"
            android:background="@drawable/gaps"
            android:gravity="center"
            android:ems="10"
            android:hint="username"
            android:id="@+id/et_sign_username"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:background="@drawable/gaps"
            android:layout_margin="20dp"
            android:ems="10"
            android:hint="password"
            android:id="@+id/et_sign_password"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:background="@drawable/gaps"
            android:layout_margin="20dp"
            android:ems="10"
            android:hint="confirm password"
            android:id="@+id/et_sign_password_confirm"/>
    <Spinner
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="45dp"
            android:background="@drawable/gaps"
            android:id="@+id/spinner"/>
    <Button
            android:text="Sign up"
            android:textSize="20sp"
            android:fontFamily="@font/trueno_lt"
            android:layout_width="250dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:id="@+id/btn_signup"
            android:textAllCaps="false"
            android:background="@drawable/btn_rounded_white"/>


</LinearLayout>